<% presenter = ::Layouts::AppRouterPresenter.new(self, @course) %>

<% content_for(:viewport) do %>
  <meta name="viewport"/>
<% end %>
<% content_for(:head) do %>
  <%= vite_javascript_tag 'admin', nonce: true %>
<% end %>
<% content_for(:wrapper) do %>
  <script id="school-router-data" type="application/json">
    <%= presenter.props_to_json.html_safe %>
  </script>
  <div class="antialiased flex h-screen overflow-hidden">
    <div id="school-router" class="flex school-admin-navbar flex-shrink-0"></div>
    <%= yield %>
  </div>
<% end %>
<%= render template: 'layouts/tailwind' %>
